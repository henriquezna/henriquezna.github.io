---
const { title, url, image, role, content, content2, content3 } = Astro.props
---
<div class="card">
    <h2>{title}</h2>
    <div class="row">
        <div class="column-left">    
            <a class="blog-links" href={url}>
                <img src={image}>
            </a>
        </div>
        <div class="column-right">
            <p>{role}</p>
            <ul>
                <li>{content}</li>
                <li>{content2}</li>
                <li>{content3}</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .row {
        display: flex;
    }
    .column-left {
        width: 50%;
    }
    .column-right {
        width: 50%;
        padding-left: 1rem;
    }
    .card {
        width: 100%;
        height: 100%;
        background-color: rgba(32, 75, 145, 0.25);
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0px;
        align-content:flex-start;
        justify-content:left;
        padding: 1rem;
        border-radius: 5px;
    }
    img {
        max-width: 100%;
        max-height: 100%;
    }
    h2 {
        font-size: 1.80rem;
        margin: 0%;
    }
    p {
        font-size: 1.25rem;
        padding: 0%;
        margin: 0%;
    }
    li {
        padding: 0%;
        margin: 0%;
    }
    a {
        padding: 0%;
        margin: 0%;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
    }
    img:hover {
        text-decoration: none;
        background: #100242;
    }
</style>