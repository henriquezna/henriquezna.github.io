---
const { title, url, image, content } = Astro.props
---
<div>
    <li class="blog-list">
        <a class="blog-links" href={url}>
            {title}
            <img src={image}>
            <p>{content}</p>
        </a>
    </li>
    
    
</div>
<style>
    div {
        width: 300px;
        height: 200px;
        background-color: rgb(31, 26, 100);
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0px;
        align-content: center;
        justify-content: center;
        padding: 1rem;
        border-radius: 15px;
    }
    img {
        max-width: 250px;
        max-height: 150px;
    }
    p {
        font-size: 1rem;
        padding: 0%;
        margin: 0%;
    }
    li {
        padding: 0%;
        margin: 0%;
    }
    a {
        padding: 0%;
        margin: 0%;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
    }
    div:hover {
        text-decoration: none;
        background: #fe9546;
    }
</style>